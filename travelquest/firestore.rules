rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Conversations Collection
    match /conversations/{conversationId} {
      // Allow reading the conversation only if the current user is a participant
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      // Allow writing if the user is part of the conversation
      allow write: if request.auth != null && request.auth.uid in request.resource.data.participants;
    }

    // Messages Collection
    match /conversations/{conversationId}/messages/{messageId} {
      // Allow read and write for authenticated users who are part of the conversation
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participants;
    }

    // Hashtags Collection
    match /hashtags/{hashtagId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Public Profiles Collection
    match /publicProfiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
