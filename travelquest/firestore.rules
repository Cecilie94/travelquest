rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users Collection
    match /users/{userId} {
      allow write: if request.auth != null;
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Hashtags Collection
    match /hashtags/{hashtagId} {
      allow read: if request.auth != null;
    }
  }
}